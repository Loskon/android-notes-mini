<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_add_in_new_note"
        style="@style/ButtonFlatStyle"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/dg_add_new_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_update_old_note"
        style="@style/ButtonFlatStyle"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        android:text="@string/dg_add_to_created_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_in_new_note" />
</androidx.constraintlayout.widget.ConstraintLayout>