<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loskon.noteminimalism3.ui.views.CustomNavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorBottomSheet"
        android:backgroundTint="?attr/colorBottomSheet"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:itemIconTint="?attr/colorTitle"
        app:itemShapeFillColor="@android:color/transparent"
        app:itemTextColor="?attr/colorTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_navigation_view" />

</androidx.constraintlayout.widget.ConstraintLayout>