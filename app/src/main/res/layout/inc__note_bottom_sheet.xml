<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollViewSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorAppBar"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            layout="@layout/inc_shadow_imitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text="TextView"
            android:textColor="@color/color_text_date_mod"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_sheet_paste"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/bs_paste_text"
            android:textColor="?attr/colorTitle"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_sheet_copy_all_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/bs_copy_text"
            android:textColor="?attr/colorTitle"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_sheet_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/bs_share"
            android:textColor="?attr/colorTitle"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_sheet_save_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/bs_download"
            android:textColor="?attr/colorTitle"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_sheet_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/bs_to_close"
            android:textColor="?attr/colorTitle"
            android:textSize="17sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>