<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">

    <include
        android:id="@+id/include"
        layout="@layout/item_note_old"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_for_title_pref"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/padding_for_title_pref"
        android:paddingBottom="8dp"
        android:text="@string/font_size_card_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_font_size_card_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_for_slider_pref"
        android:layout_marginEnd="@dimen/margin_for_slider_pref"
        android:stepSize="1"
        android:valueFrom="14"
        android:valueTo="40"
        app:haloRadius="@dimen/slider_halo_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_title"
        app:thumbRadius="@dimen/slider_thumb_radius"
        app:tickVisible="false" />

    <!-- Continuous slider -->

</androidx.constraintlayout.widget.ConstraintLayout>