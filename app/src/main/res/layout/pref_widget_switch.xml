<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/buttonGroup_lordOfTheRings"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        app:borderColor="@color/teal_700"
        app:borderWidth="1dp"
        app:divider="@color/color_default_light_blue"
        app:dividerPadding="10dp"
        app:dividerWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:position="0"
        app:radius="6dp"
        app:ripple="true"
        app:selectedBackground="@color/teal_700">


        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/switchBackgroundColor"
            android:padding="10dp"
            app:selectedTextColor="@color/white"
            app:text="@string/off"
            app:textSize="10sp" />

        <com.addisonelliott.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/switchBackgroundColor"
            android:padding="5dp"
            app:selectedTextColor="@color/white"
            app:text="@string/on"
            app:textColor="?attr/titleTextColor"
            app:textSize="10sp" />
    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

</androidx.constraintlayout.widget.ConstraintLayout>