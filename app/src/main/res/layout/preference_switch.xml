<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButtonToggleGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toggle_group_preference"
    android:layout_width="68dp"
    android:layout_height="20dp"
    app:singleSelection="true">

    <Button
        android:id="@+id/btn_toggle_preference_off"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:fontFamily="@font/roboto_light"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="@string/off"
        android:textSize="9sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/margin_xsmall"
        app:rippleColor="@null"
        tools:ignore="SmallSp,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_toggle_preference_on"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:fontFamily="@font/roboto_light"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="@string/on"
        android:textSize="9sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/margin_xsmall"
        app:rippleColor="@null"
        tools:ignore="SmallSp,TouchTargetSizeCheck,TextContrastCheck" />
</com.google.android.material.button.MaterialButtonToggleGroup>