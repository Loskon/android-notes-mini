<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="?attr/colorCardView"
    card_view:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/title_font"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Title"
            android:textColor="?attr/colorTitle"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/example_text_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/example_text_for_font"
            android:textColor="?attr/colorDate"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <RadioButton
            android:id="@+id/radio_button_font"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@drawable/radio_button_icon"
            android:buttonTint="@color/material_blue"
            android:checked="true"
            android:clickable="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>