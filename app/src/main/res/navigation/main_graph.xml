<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.loskon.noteminimalism3.app.presentation.screens.notelist.NoteListFragment"
        android:label="UsersFragment">
        <action
            android:id="@+id/actionOpenSettingsFragment"
            app:destination="@id/rootSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/rootSettingsFragment"
        android:name="com.loskon.noteminimalism3.app.presentation.screens.RootSettingsFragmentNew"
        android:label="rootSettingsFragment">
        <action
            android:id="@+id/actionOpenAppearanceSettingsFragment"
            app:destination="@id/appearanceSettingsFragment" />
        <action
            android:id="@+id/actionOpenFontFragment"
            app:destination="@id/fontFragment" />
        <action
            android:id="@+id/actionOpenBackupFragment"
            app:destination="@id/backupNewFragment" />
    </fragment>

    <fragment
        android:id="@+id/appearanceSettingsFragment"
        android:name="com.loskon.noteminimalism3.app.presentation.screens.AppearanceSettingsFragmentNew"
        android:label="appearanceSettingsFragment" />

    <fragment
        android:id="@+id/fontFragment"
        android:name="com.loskon.noteminimalism3.app.presentation.screens.font.FontTypeFragment"
        android:label="fontFragment" />
    <fragment
        android:id="@+id/backupNewFragment"
        android:name="com.loskon.noteminimalism3.app.presentation.screens.backup.presentation.BackupNewFragment"
        android:label="BackupNewFragment">
        <action
            android:id="@+id/actionOpenCloudConfirmSheetDialogFragment"
            app:destination="@id/cloudConfirmSheetDialogFragment" />
    </fragment>

    <dialog
        android:id="@+id/cloudConfirmSheetDialogFragment"
        android:name="com.loskon.noteminimalism3.app.presentation.screens.CloudConfirmSheetDialogFragment"
        android:label="CloudConfirmSheetDialogFragment">
        <argument
            android:name="isBackup"
            app:argType="boolean" />
    </dialog>

</navigation>