<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noteminimalism3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:overScrollMode">never</item>

        <!-- My custom colors for items -->
        <item name="colorTitle">@color/white</item>
        <item name="colorDate">@android:color/darker_gray</item>
        <item name="colorAppBar">@color/item_dark</item>
        <item name="colorFabIcon">@color/item_dark</item>
        <item name="colorCardView">@color/item_dark</item>
        <item name="colorBottomSheet">@color/item_dark</item>
        <item name="colorBorderStroke">@color/white</item>
        <item name="colorTitleReverse">@color/black</item>
        <item name="colorSnackbar">@color/snackbar_background_dark</item>
        <item name="colorOkDialog">@color/background_dark</item>
        <item name="colorShadow">@android:color/transparent</item>
        <item name="colorButtonIcon">@color/background_dark</item>
        <item name="colorSwitchBackground">@color/background_dark</item>

        <!-- My custom drawable for items -->
        <item name="drawableSearchView">@drawable/bg_round_search_dark</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Cursor EditText color -->
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <!-- EditText highlight color -->
        <item name="android:textColorHighlight">#80A9A9A9</item>

        <!-- Disable Multi-touch -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>


    <!-- MaterialAlertDialog -->
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
        <item name="colorSurface">@color/background_dark</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">6dp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorOnSurface">@android:color/darker_gray</item>
    </style>
</resources>