<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noteminimalism3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:overScrollMode">never</item>

        <item name="titleTextColor">@color/white</item>
        <item name="dateTextColor">@android:color/darker_gray</item>
        <item name="bottomAppBarColor">@color/dark_item</item>
        <item name="iconFabColor">@color/dark_item</item>
        <item name="cardViewColor">@color/dark_item</item>
        <item name="bottomSheetColor">@color/dark_item</item>
        <item name="borderStroke">@color/white</item>
        <item name="reverseTitleTextColor">@color/black</item>
        <item name="backgroundSnackbar">@color/snackbar_background_dark</item>
        <item name="textColorOkDialog">@color/dark_light</item>
        <item name="shadowImitationColor">@android:color/transparent</item>
        <item name="buttonIconColor">@color/dark_light</item>
        <item name="switchBackgroundColor">@color/dark_light</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/dark_light</item>
        <item name="android:colorBackground">@color/dark_light</item>


        <!-- set cursor color -->
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <!-- set highlight color -->
        <item name="android:textColorHighlight">#80A9A9A9</item>

        <item name="bg_search_view">@drawable/bg_round_search_dark</item>

        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- MaterialAlertDialog -->
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
        <item name="colorSurface">@color/dark_light</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorOnSurface">@android:color/darker_gray</item>
    </style>

</resources>