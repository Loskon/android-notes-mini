<resources>
    <!-- Base application theme. -->
    <style name="Theme.Noteminimalism3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:overScrollMode">never</item>

        <!-- My custom colors for items -->
        <item name="colorTitle">@color/white</item>
        <item name="colorDate">@android:color/darker_gray</item>
        <item name="colorAppBar">@color/black_light</item>
        <item name="colorFabIcon">@color/black_light</item>
        <item name="colorCardView">@color/black_light</item>
        <item name="colorBottomSheet">@color/black_light</item>
        <item name="colorBorderStroke">@color/white</item>
        <item name="colorTitleReverse">@color/black</item>
        <item name="colorSnackbar">@color/dark_slate_color</item>
        <item name="colorOkDialog">@color/black_light</item>
        <item name="colorShadow">@android:color/transparent</item>
        <item name="colorButtonIcon">@color/black_dark</item>
        <item name="colorSwitchBackground">@color/black_dark</item>
        <item name="colorDialogBackground">@color/black_light</item>
        <item name="colorDeleteIconRestore">@android:color/holo_red_light</item>
        <item name="colorBackgroundSearchView">@color/black_light</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/black_dark</item>
        <item name="android:colorBackground">@color/black_dark</item>
        <item name="colorWindowBackground">@color/black_dark</item>

        <!-- Cursor EditText color -->
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <!-- EditText highlight color -->
        <item name="android:textColorHighlight">#80A9A9A9</item>

        <!-- Disable Multi-touch -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
    </style>


    <!-- Snackbar -->
    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/snackbar_background</item>
        <!--        <item name="cornerRadius">@dimen/mtrl_snackbar_background_corner_radius</item>
                <item name="android:layout_margin">@dimen/mtrl_snackbar_margin</item>
                <item name="actionTextColorAlpha">@dimen/mtrl_snackbar_action_text_color_alpha</item>-->
    </style>
</resources>