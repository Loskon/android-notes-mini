<resources>
    <!-- Application theme for a dark theme. -->
    <style name="AppTheme" parent="@style/BaseAppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/window_background_dark</item>

        <!-- Customize your theme here. -->>
        <!-- Window background color.-->
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:colorBackground">@color/window_background_dark</item>

        <!-- Customize colors of items. -->
        <item name="colorPrimaryText">@android:color/white</item>
        <item name="colorSecondText">@android:color/darker_gray</item>
        <item name="colorTextHint">@color/widget_text_hint</item>
        <item name="colorBottomBar">@color/dialog_background</item>
        <item name="colorFabIcon">@color/dialog_background</item>
        <item name="colorPrimaryCardView">@color/dialog_background</item>
        <item name="colorSecondCardView">@color/widget_snackbar_dark</item>
        <item name="colorSnackbar">@color/widget_snackbar_dark</item>
        <item name="colorButtonOk">@color/dialog_background</item>
        <item name="colorShadowImitation">@android:color/transparent</item>
        <item name="colorSwitchBackground">@color/window_background_dark</item>
        <item name="colorDialogBackground">@color/dialog_background</item>
        <item name="colorWarning">@android:color/holo_red_light</item>
        <item name="colorSearchViewBackground">@color/dialog_background</item>
        <item name="colorBackupImage">@color/dialog_background</item>
        <item name="colorLayoutBackground">@color/window_background_dark</item>
    </style>
</resources>