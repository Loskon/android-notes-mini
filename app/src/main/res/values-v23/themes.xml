<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/BaseAppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <!-- Window background color.-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <!-- Customize colors of items. -->
        <item name="colorPrimaryText">@android:color/black</item>
        <item name="colorSecondText">@color/widget_secondary_text</item>
        <item name="colorTextHint">@android:color/darker_gray</item>
        <item name="colorBottomBar">@android:color/white</item>
        <item name="colorFabIcon">@android:color/white</item>
        <item name="colorPrimaryCardView">@color/white</item>
        <item name="colorSecondCardView">@color/white</item>
        <item name="colorSnackbar">@color/widget_snackbar_light</item>
        <item name="colorButtonOk">@android:color/white</item>
        <item name="colorShadowImitation">@android:color/darker_gray</item>
        <item name="colorSwitchBackground">@android:color/white</item>
        <item name="colorDialogBackground">@android:color/white</item>
        <item name="colorWarning">@android:color/holo_red_dark</item>
        <item name="colorSearchViewBackground">@color/widget_search_view</item>
        <item name="colorBackupImage">@color/widget_backup_image</item>
        <item name="colorLayoutBackground">@android:color/white</item>
    </style>
</resources>