<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noteminimalism3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:overScrollMode">never</item>

        <!-- My custom colors for items -->
        <item name="colorTitle">@color/black</item>
        <item name="colorDate">@android:color/darker_gray</item>
        <item name="colorAppBar">@color/white</item>
        <item name="colorFabIcon">@color/white</item>
        <item name="colorCardView">@color/white</item>
        <item name="colorBottomSheet">@color/white</item>
        <item name="colorBorderStroke">@color/black</item>
        <item name="colorTitleReverse">@color/white</item>
        <item name="colorSnackbar">@color/snackbar_background_light</item>
        <item name="colorOkDialog">@color/white</item>
        <item name="colorShadow">@android:color/darker_gray</item>
        <item name="colorButtonIcon">@android:color/white</item>
        <item name="colorSwitchBackground">@android:color/white</item>

        <!-- My custom drawable for items -->
        <item name="drawableSearchView">@drawable/bg_round_search_light</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <!-- Cursor EditText color -->
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <!-- EditText highlight color -->
        <item name="android:textColorHighlight">#80A9A9A9</item>

        <!-- Disable Multi-touch -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>


    <!-- MaterialAlertDialog -->
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
        <item name="colorSurface">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">4dp</item>
    </style>


    <!-- TextInputLayout -->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorOnSurface">@color/gray_for_surface</item>
    </style>


    <!-- Style -->
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- AuthenticationTheme -->
    <style name="AuthenticationTheme" parent="FirebaseUI">
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- BottomSheetStatusBar -->
    <style name="BottomSheetStatusBar" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- BottomSheetBackground -->
    <style name="BottomSheetBackground" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_corner_light</item>
    </style>

    <style name="ThemeOverlay.Noteminimalism3.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
</resources>