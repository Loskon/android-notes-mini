<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noteminimalism3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:overScrollMode">never</item>

        <item name="titleTextColor">@color/black</item>
        <item name="dateTextColor">@color/gray</item>
        <item name="bottomAppBarColor">@color/white</item>
        <item name="iconFabColor">@color/white</item>
        <item name="cardViewColor">@color/white</item>
        <item name="bottomSheetColor">@color/white</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <!-- set cursor color -->
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <!-- set highlight color -->
        <item name="android:textColorHighlight">#80A9A9A9</item>
    </style>

    <style name="ShapeAppearance.YourApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

        <!-- MaterialAlertDialog -->
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
        <item name="colorSurface">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">4dp</item>
    </style>



    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10%</item>
    </style>

    <!--Диалог с прозрачным фоном-->
    <style name="customDialog" parent="android:Theme.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <!--Высота не работает
        <item name="windowFixedHeightMajor">95%</item>
        <item name="windowFixedHeightMinor">95%</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="colorOnSurface">@android:color/darker_gray</item>
    </style>

</resources>