<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_app_header">

        <Preference
            android:key="@string/custom_app_title"
            android:title="@string/custom_app_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/type_font_title"
            android:title="@string/type_font_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/sort_title"
            android:title="@string/sort_title"
            app:iconSpaceReserved="false" />

        <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenSwitch
            android:layout="@layout/custom_pref_layout"
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false"
            app:key="@string/dark_mode_key"
            app:title="@string/dark_mode_title" />

    </com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory>

    <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory
        android:title="@string/data_header"
        app:iconSpaceReserved="false">

        <Preference
            android:title="@string/backup_title"
            app:iconSpaceReserved="false"
            app:key="@string/backup_title" />
        <Preference
            android:title="@string/folder_title"
            app:iconSpaceReserved="false"
            app:key="@string/folder_title" />

        <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenSwitch
            android:layout="@layout/custom_pref_layout"
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false"
            app:key="@string/auto_backup_key"
            app:summary="@string/auto_backup_summary"
            app:title="@string/auto_backup_title" />

        <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenSwitch
            android:layout="@layout/custom_pref_layout"
            app:allowDividerAbove="false"
            app:defaultValue="false"
            app:dependency="@string/auto_backup_key"
            app:iconSpaceReserved="false"
            app:key="@string/notification_key"
            app:summary="@string/notification_auto_backup_summary"
            app:title="@string/notification_title" />

        <Preference
            android:title="@string/number_of_backup_title"
            app:iconSpaceReserved="false"
            app:key="@string/number_of_backup_key" />

    </com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory>

    <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory
        app:iconSpaceReserved="false"
        app:title="@string/notes_header">

        <Preference
            android:key="@string/hyperlinks_title"
            android:title="@string/hyperlinks_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/font_size_notes_title"
            android:title="@string/font_size_notes_title"
            app:iconSpaceReserved="false" />

        <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenSwitch
            android:layout="@layout/custom_pref_layout"
            app:allowDividerAbove="false"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/update_date_key"
            app:summary="@string/update_date_summary"
            app:title="@string/update_date_title" />

    </com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory>

    <com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory
        app:iconSpaceReserved="false"
        app:title="@string/other_header">

        <Preference
            android:key="@string/retention_trash_key"
            android:title="@string/retention_trash_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/communication_title"
            android:title="@string/communication_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/about_app_title"
            android:title="@string/about_app_title"
            app:iconSpaceReserved="false" />

    </com.loskon.noteminimalism3.ui.prefscreen.PrefScreenCategory>

</PreferenceScreen>