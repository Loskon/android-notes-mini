<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.loskon.noteminimalism3.ui.preference.MyPrefCategory
        app:iconSpaceReserved="false"
        app:title="@string/appearance_settings_header">

        <Preference
            android:key="@string/custom_app_title"
            android:title="@string/custom_app_title"
            app:iconSpaceReserved="false" />

        <com.loskon.noteminimalism3.ui.preference.MySwitchPref
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false"
            android:layout="@layout/custom_pref_layout"
            app:key="@string/dark_mode_title"
            app:title="@string/dark_mode_title" />

    </com.loskon.noteminimalism3.ui.preference.MyPrefCategory>

    <com.loskon.noteminimalism3.ui.preference.MyPrefCategory
        app:iconSpaceReserved="false"
        android:title="@string/backup_of_notes">

        <Preference
            android:title="@string/backup_and_restore"
            app:iconSpaceReserved="false"
            app:key="@string/backup_and_restore" />
        <Preference
            android:title="@string/folder_for_backup"
            app:iconSpaceReserved="false"
            app:key="@string/folder_for_backup" />

        <com.loskon.noteminimalism3.ui.preference.MySwitchPref
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false"
            android:layout="@layout/custom_pref_layout"
            app:key="@string/auto_backup"
            app:summary="@string/auto_backup_summary"
            app:title="@string/auto_backup" />

        <com.loskon.noteminimalism3.ui.preference.MySwitchPref
            app:allowDividerAbove="false"
            app:defaultValue="true"
            android:layout="@layout/custom_pref_layout"
            app:dependency="@string/auto_backup"
            app:iconSpaceReserved="false"
            app:key="@string/notification_auto_backup"
            app:summary="@string/notification_auto_backup_summary"
            app:title="@string/notification_auto_backup" />

        <Preference
            android:title="@string/num_of_backup"
            app:iconSpaceReserved="false"
            app:key="@string/num_of_backup" />

    </com.loskon.noteminimalism3.ui.preference.MyPrefCategory>

    <com.loskon.noteminimalism3.ui.preference.MyPrefCategory
        app:iconSpaceReserved="false"
        app:title="@string/notes_header">

        <Preference
            android:key="@string/hyperlinks_title"
            android:title="@string/hyperlinks_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/font_size_notes_title"
            android:title="@string/font_size_notes_title"
            app:iconSpaceReserved="false" />

        <com.loskon.noteminimalism3.ui.preference.MySwitchPref
            app:allowDividerAbove="false"
            app:iconSpaceReserved="false"
            android:layout="@layout/custom_pref_layout"
            app:key="@string/update_date_title"
            app:summary="@string/update_date_summary"
            app:title="@string/update_date_title" />

    </com.loskon.noteminimalism3.ui.preference.MyPrefCategory>

    <com.loskon.noteminimalism3.ui.preference.MyPrefCategory
        app:iconSpaceReserved="false"
        app:title="@string/other_header">

        <Preference
            android:key="@string/retention_trash_title"
            android:title="@string/retention_trash_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/communication"
            android:title="@string/communication"
            app:iconSpaceReserved="false" />

    </com.loskon.noteminimalism3.ui.preference.MyPrefCategory>

</PreferenceScreen>