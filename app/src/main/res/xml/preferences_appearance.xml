<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/note_appearance">
        <com.loskon.noteminimalism3.ui.preference.item.PrefItemCard app:key="1" />
    </com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory>

    <com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/select_color">
        <com.loskon.noteminimalism3.ui.preference.item.PrefItemSelectColor
            android:title="@string/select_color"
            app:key="3" />
    </com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory>

    <com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/number_of_lines">
        <com.loskon.noteminimalism3.ui.preference.item.PrefItemNumOfLines app:key="5" />
    </com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory>

    <com.loskon.noteminimalism3.ui.preference.MyPreferenceCategory
        android:title="Preference category"
